@using movieProject.Models.Product
@model Product
@{
    var name = "Create a new product";
}

<div class="col-md-3 pt-3 m-auto">
    <div class="card mb-3 text-center">
        <div class="text-center">
            <img class="card-img-top opacity-25 rounded img-fluid" src="\images\product\build.jpg" alt="product backdrop" style="max-height: 400px; min-height: 400px;">
            <div class="card-img-overlay">
                <h2>@name</h2>
                @using (Html.BeginForm("InsertProductToDatabase", "Product", "Post"))
                {
                    <div class="pb-3">
                        <input asp-for="ProductID" type="hidden" value="" />

                        <label asp-for="Name" class="control-label">Name</label>
                        <input type="text" name="Name" class="form-control" value="" />

                        <label asp-for="Price" class="control-label">Price</label>
                        <input type="number" step="0.01" name="Price" class="form-control" />

                        <div class="form-group">
                            <label for="">Select a Category</label>
                            <select class="form-control" name="CategoryID" value="">
                                @foreach (var cat in Model.Categories)
                                {
                                    <option value="@cat.CategoryID">@cat.CategoryID @cat.Name</option>
                                }
                            </select>
                        </div>
                    </div>
                    <input type="submit" value="create product" class="btn btn-primary btn-outline-dark" />
                }
            </div>
        </div>
    </div>
</div>