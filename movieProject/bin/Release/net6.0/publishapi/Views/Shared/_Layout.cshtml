<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - joel's portfolio</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/PortfolioWebsite.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand navbar-light bg-dark box-shadow">
            <div class="container">
                <button class="navbar-toggler" type="button" data-bs-toggle="expand" data-bs-target=".navbar-expand" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                </button>
                <div class="navbar-expand justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Home/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Movie/Index">Movie API</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Product/Index">SQL Database</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-light" href="/Weather/Index">Weather API</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div>
        <main role="main" class="bg-secondary min-vh-100">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-dark border-dark">
        <div class="container">
            &copy; 2022 - joel's portfolio - <a asp-area="" asp-page="/Home/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>